<form action="/albums/<%= @album.id %>" method="post">
<input type="hidden" name="_method" value="put">

  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= @album.name %>">

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="<%= @album.genre %>"><br>

  <label for="price_buying">Price Buying:</label>
  <input type="text" name="price_buying" value="<%= @album.price_buying %>">

  <label for="price_selling">Price Selling:</label>
  <input type="text" name="price_selling" value="<%= @album.price_selling %>">

  <label for="stock">Stock:</label>
  <input type="text" name="stock" value="<%= @album.stock %>">

  <input type="submit" value="save">

</form>
