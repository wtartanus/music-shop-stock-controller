<form action="/albums" method="post">

<label for="artist_id">Artist:</label>
<select name="artist_id">
<% @artists.each do |artist|%>
  <option name="artist_id" value="<%= artist.id%>"><%= artist.name%></option>
<% end %>
</select>

<label for="name">Name:</label>
<input type="text" name="name">

<label for="gender">Gender:</label>
<input type="text" name="gender"><br>

<label for="price_buying">Price Buying:</label>
<input type="text" name="price_buying">

<label for="price_selling">Price Selling:</label>
<input type="text" name="price_selling">

<label for="stock">Stock:</label>
<input type="text" name="stock">

<input type="submit" value="save">
  
</form>